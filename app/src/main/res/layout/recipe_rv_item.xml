<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <android.support.v7.widget.CardView
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_recycler_view">
            <ImageView
                android:id="@+id/img_recipe_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/food"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:contentDescription="@string/image_recipe"/>

            <TextView
                android:id="@+id/tv_recipe_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_margin="16dp"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="@string/image_recipe"/>

            <TextView
                android:id="@+id/tv_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="16dp"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:textColor="@color/husky"
                android:text="@string/image_recipe"/>

            <TextView
                android:id="@+id/tv_target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="16dp"
                android:textSize="14sp"
                android:textColor="@color/husky"
                android:text="@string/image_recipe"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/tv_apt_for"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="16dp"
                android:textSize="14sp"
                android:textColor="@color/husky"
                android:text="@string/image_recipe"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="16dp"
                android:textSize="14sp"
                android:textColor="@color/husky"
                android:text="@string/image_recipe"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="16dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/husky"
                android:text="@string/image_recipe"
                android:paddingLeft="10dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>