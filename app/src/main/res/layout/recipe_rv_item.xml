<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/rounded_recycler_view"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_recipe_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/food"
        android:layout_margin="16dp"
        android:contentDescription="@string/image_recipe"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_margin="16dp"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="@string/image_recipe"
        app:layout_constraintTop_toBottomOf="@id/img_recipe_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        android:textColor="@color/husky"
        android:text="@string/image_recipe"
        app:layout_constraintTop_toBottomOf="@id/tv_recipe_name"/>


    <TextView
        android:id="@+id/tv_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_margin="16dp"
        android:textSize="14sp"
        android:textColor="@color/husky"
        android:text="@string/image_recipe"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_contents"/>

    <TextView
        android:id="@+id/tv_apt_for"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_margin="16dp"
        android:textSize="14sp"
        android:textColor="@color/husky"
        android:text="@string/image_recipe"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_target"/>

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_margin="16dp"
        android:textSize="14sp"
        android:textColor="@color/husky"
        android:text="@string/image_recipe"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_apt_for"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_margin="16dp"
        android:textSize="14sp"
        android:textColor="@color/husky"
        android:text="@string/image_recipe"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_category"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>